# Project Configuration
# Note: Inside Airflow container, project files are mounted under /opt/airflow/project
PROJECT_ROOT=/opt/airflow/project

# FOR DOCKER OPERATOR TASKS - REQUIRED FOR DAG EXECUTION
# Update this to your actual project path on the host machine
# Example on Windows: C:\Users\YourName\repos\Weather_data_project
# Example on Mac/Linux: /home/username/repos/Weather_data_project
HOST_PROJECT_ROOT=/path/to/Weather_data_project

# Database Credentials - Weather Database
DB_USER=weather_user
DB_PASSWORD=your-secure-password-here
DB_NAME=weather_db

# Airflow Database Credentials
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=your-secure-airflow-password-here
AIRFLOW_DB_NAME=airflow_db
AIRFLOW_ADMIN_PASSWORD=airflow-UI-log-in-password

# dbt Configuration - Database connection settings for dbt transformations
DBT_DB_USER=weather_user
DBT_DB_PASSWORD=your-secure-password-here
DBT_DB_HOST=db
DBT_DB_PORT=5432
DBT_DB_NAME=weather_db
DBT_SCHEMA=dev

# Weather API
WEATHER_API_KEY=your-api-key-here
CAPITALS_JSON_PATH=/app/full_world_capitals_plus_egypt.json
API_KEYS_CONFIG=/app/api_keys_config.json

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
